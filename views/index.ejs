<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            weekend: '#fef3c7',
            holiday: '#fee2e2',
            today: '#d1fae5'
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen bg-gray-50 text-gray-900">
  <div class="max-w-6xl mx-auto p-4 md:p-8">
    <header class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 mb-6">
      <h1 class="text-2xl md:text-3xl font-bold">My Personal Diary</h1>
      <div class="flex items-center gap-2">
        <button id="prevMonth" class="px-3 py-2 bg-white border rounded hover:bg-gray-50">Prev</button>
        <div id="monthLabel" class="text-lg font-semibold min-w-[160px] text-center"></div>
        <button id="nextMonth" class="px-3 py-2 bg-white border rounded hover:bg-gray-50">Next</button>
      </div>
    </header>

    <section class="grid grid-cols-7 gap-2 text-center mb-2 text-xs md:text-sm font-medium text-gray-600">
      <div>Sun</div>
      <div>Mon</div>
      <div>Tue</div>
      <div>Wed</div>
      <div>Thu</div>
      <div>Fri</div>
      <div>Sat</div>
    </section>

    <section id="calendar" class="grid grid-cols-7 gap-2"></section>
    <!-- Floating bottom-center View Entries button -->
    <button id="viewEntriesBtn" class="fixed bottom-6 left-1/2 -translate-x-1/2 transform px-4 py-2 bg-blue-600 text-white rounded shadow-lg hover:bg-blue-700">
      View Diary
    </button>
  </div>

  <!-- Create/Edit Modal -->
  <div id="entryModal" class="fixed inset-0 hidden items-center justify-center bg-black/40 p-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-xl">
      <div class="flex items-center justify-between p-4 border-b">
        <h3 id="entryModalTitle" class="text-lg font-semibold">New Entry</h3>
        <button class="p-2" onclick="closeEntryModal()">✕</button>
      </div>
      <form id="entryForm" class="p-4 space-y-3">
        <input type="hidden" id="entryId" />
        <div>
          <label class="block text-sm mb-1">Date</label>
          <input id="entryDate" type="date" class="w-full border rounded px-3 py-2" required />
        </div>
        <div>
          <label class="block text-sm mb-1">Title</label>
          <input id="entryTitle" type="text" class="w-full border rounded px-3 py-2" placeholder="Optional title" />
        </div>
        <div>
          <label class="block text-sm mb-1">Mood</label>
          <select id="entryMood" class="w-full border rounded px-3 py-2">
            <option value="neutral">Neutral</option>
            <option value="happy">Happy</option>
            <option value="sad">Sad</option>
            <option value="angry">Angry</option>
            <option value="excited">Excited</option>
            <option value="tired">Tired</option>
          </select>
        </div>
        <div>
          <label class="block text-sm mb-1">Tags (comma separated)</label>
          <input id="entryTags" type="text" class="w-full border rounded px-3 py-2" placeholder="e.g. work, health" />
        </div>
        <div>
          <label class="block text-sm mb-1">Content</label>
          <textarea id="entryContent" rows="6" class="w-full border rounded px-3 py-2" placeholder="Write your thoughts..." required></textarea>
        </div>
        <div class="flex items-center justify-end gap-2 pt-2">
          <button type="button" class="px-4 py-2 bg-gray-100 rounded" onclick="closeEntryModal()">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Month Entries Modal -->
  <div id="monthEntriesModal" class="fixed inset-0 hidden items-center justify-center bg-black/40 p-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-3xl max-h-[80vh] overflow-y-auto">
      <div class="flex items-center justify-between p-4 border-b">
        <h3 class="text-lg font-semibold">This Month's Entries</h3>
        <button class="p-2" onclick="closeMonthEntriesModal()">✕</button>
      </div>
      <div id="monthEntriesList" class="p-2 divide-y"></div>
    </div>
  </div>

  <!-- View Modal -->
  <div id="viewModal" class="fixed inset-0 hidden items-center justify-center bg-black/40 p-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-xl">
      <div class="flex items-center justify-between p-4 border-b">
        <h3 id="viewTitle" class="text-lg font-semibold">Diary Entry</h3>
        <button class="p-2" onclick="closeViewModal()">✕</button>
      </div>
      <div class="p-4 space-y-3">
        <div class="text-sm text-gray-600" id="viewDate"></div>
        <div class="text-sm"><span class="font-medium">Mood:</span> <span id="viewMood"></span></div>
        <div class="text-sm"><span class="font-medium">Tags:</span> <span id="viewTags"></span></div>
        <p id="viewContent" class="whitespace-pre-wrap"></p>
        <div class="flex justify-end gap-2 pt-2">
          <button class="px-4 py-2 bg-yellow-500 text-white rounded" id="viewEditBtn">Edit</button>
          <button class="px-4 py-2 bg-red-600 text-white rounded" id="viewDeleteBtn">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
